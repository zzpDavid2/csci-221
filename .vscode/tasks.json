{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clang: build active file (strict)",
      "type": "shell",
      "command": "sh",
      "args": [
        "-c",
        "clang -Wall -Wextra -Werror ${file} -o ${fileDirname}/${fileBasenameNoExtension} -lm && ${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
